{
  "name": "hackathon",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "docker:up": "bun run --cwd apps/api docker:up",
    "docker:down": "bun run --cwd apps/api docker:down",

    "db:push": "bun run --cwd apps/packages/db db:push",
    "db:seed": "bun run --cwd apps/packages/db db:seed",
    "db:reset": "bun run --cwd apps/packages/db db:reset"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "apps/packages/*"
  ]
}