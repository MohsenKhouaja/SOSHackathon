{
  "name": "@repo/db",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "types": "./dist/es/index.d.ts"
    },
    "./schema": {
      "import": "./dist/es/schema.js",
      "types": "./dist/es/schema.d.ts"
    },
    "./tables": {
      "import": "./dist/es/tables.js",
      "types": "./dist/es/tables.d.ts"
    },
    "./query-builder": {
      "import": "./dist/es/query-builder.js",
      "types": "./dist/es/query-builder.d.ts"
    },
    "./filter-operators": {
      "import": "./dist/es/filter-operators.js",
      "types": "./dist/es/filter-operators.d.ts"
    }
  },
  "scripts": {
    "dev:new": "bunchee --watch",
    "build": "bunchee",
    "clean": "rm -rf .turbo node_modules dist",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:orm:migrate": "dotenv -c -- bun ./scripts/migrate.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:clear": "dotenv -c -- bun ./scripts/clear.ts",
    "db:seed": "dotenv -c -- bun ./scripts/seed.ts",
    "db:seed:production": "dotenv -c --bun ./src/scripts/seed-production.ts",
    "db:reset": "bun run db:clear && bun run db:push && bun run db:seed",
    "redis:clear": "dotenv -c -- bun ./scripts/clear-redis.ts",
    "dbml": "bun ./src/dbml.ts"
  },
  
  "peerDependencies": {
    "drizzle-orm": "^1.0.0-beta.8-dbc3565"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "1.3.8",
    "@types/node": "^25.2.0",
    "bunchee": "^6.9.4",
    "dotenv-cli": "^11.0.0",
    "drizzle-dbml-generator": "^0.10.0",
    "drizzle-kit": "^1.0.0-beta.8-dbc3565",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@repo/logger": "workspace:*",
    "@repo/shared": "workspace:*",
    "@swc/helpers": "^0.5.18",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.4.18",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
